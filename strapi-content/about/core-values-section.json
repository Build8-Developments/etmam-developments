{
  "contentType": "component",
  "category": "sections",
  "displayName": "Core Values Section",
  "description": "Company core values with icon cards",
  "icon": "gem",
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Section title (e.g., 'قيمنا الأساسية')",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "text",
      "maxLength": 500,
      "description": "Optional section description",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "values": {
      "type": "component",
      "component": "ui.icon-text-card",
      "repeatable": true,
      "required": true,
      "min": 3,
      "max": 8,
      "description": "Core values (4-6 items recommended)"
    },
    "layout": {
      "type": "enumeration",
      "enum": ["grid-2", "grid-3", "grid-4"],
      "default": "grid-3",
      "description": "Number of columns in grid"
    },
    "backgroundColor": {
      "type": "string",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "default": "#F9FAFB",
      "description": "Background color (hex)"
    }
  }
}
