{
  "contentType": "component",
  "category": "sections",
  "displayName": "Our Story Section",
  "description": "Company story with timeline",
  "icon": "book",
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Section title (e.g., 'قصتنا')",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "storyText": {
      "type": "richtext",
      "required": true,
      "description": "Main story content (multiple paragraphs)",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "storyImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "description": "Story illustration image (800x600px recommended)"
    },
    "timeline": {
      "type": "component",
      "component": "content.timeline-event",
      "repeatable": true,
      "description": "Timeline events (optional, 3-5 items recommended)"
    },
    "imagePosition": {
      "type": "enumeration",
      "enum": ["left", "right"],
      "default": "right",
      "description": "Position of image relative to text"
    }
  }
}
