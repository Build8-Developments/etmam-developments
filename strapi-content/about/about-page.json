{
  "contentType": "single",
  "collectionName": "about_page",
  "displayName": "About Page",
  "description": "About page configuration - Single Type",
  "draftAndPublish": true,
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "required": true,
      "description": "SEO metadata for about page"
    },
    "heroSection": {
      "type": "component",
      "component": "sections.about-hero-section",
      "required": true,
      "description": "Hero section with company introduction"
    },
    "missionVisionSection": {
      "type": "component",
      "component": "sections.mission-vision-section",
      "required": true,
      "description": "Mission and vision cards"
    },
    "ourStorySection": {
      "type": "component",
      "component": "sections.our-story-section",
      "required": true,
      "description": "Company story with timeline"
    },
    "coreValuesSection": {
      "type": "component",
      "component": "sections.core-values-section",
      "required": true,
      "description": "Core values showcase"
    },
    "teamSection": {
      "type": "component",
      "component": "sections.team-section",
      "required": false,
      "description": "Team members (optional)"
    },
    "achievementsSection": {
      "type": "component",
      "component": "sections.achievements-section",
      "required": true,
      "description": "Achievements and statistics"
    },
    "certificationsSection": {
      "type": "component",
      "component": "sections.certifications-section",
      "required": false,
      "description": "Certifications and partners (optional)"
    },
    "ctaSection": {
      "type": "component",
      "component": "sections.cta-section",
      "required": false,
      "description": "Call-to-action section (optional)"
    },
    "publishedAt": {
      "type": "datetime",
      "description": "Publication date"
    }
  }
}
