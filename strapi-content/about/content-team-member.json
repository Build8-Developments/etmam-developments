{
  "contentType": "component",
  "category": "content",
  "displayName": "Team Member",
  "description": "Individual team member card with photo, bio, and social links",
  "icon": "user",
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Full name of team member"
    },
    "position": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Job title or role",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "bio": {
      "type": "text",
      "maxLength": 500,
      "description": "Short biography (2-3 sentences)",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "description": "Professional headshot (400x400px recommended)"
    },
    "linkedin": {
      "type": "string",
      "regex": "^https?://.*linkedin\\.com/.*",
      "description": "LinkedIn profile URL"
    },
    "twitter": {
      "type": "string",
      "regex": "^https?://.*twitter\\.com/.*|^https?://.*x\\.com/.*",
      "description": "Twitter/X profile URL"
    },
    "email": {
      "type": "email",
      "description": "Professional email address"
    },
    "displayOrder": {
      "type": "integer",
      "default": 0,
      "description": "Order in which to display (lower numbers first)"
    }
  }
}
