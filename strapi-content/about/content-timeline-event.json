    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "description": "Event description",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "icon": {
      "type": "string",
      "maxLength": 50,
      "description": "Optional icon name for the event"
    }
