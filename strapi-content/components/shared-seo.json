{
  "contentType": "component",
  "componentCategory": "shared",
  "displayName": "SEO",
  "description": "SEO metadata component for pages",
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60,
      "description": "Page title for SEO (50-60 characters)"
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160,
      "description": "Meta description for SEO (150-160 characters)"
    },
    "keywords": {
      "type": "text",
      "required": false,
      "description": "Comma-separated keywords for SEO"
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Open Graph image (1200x630px recommended)"
    },
    "canonicalURL": {
      "type": "string",
      "required": false,
      "description": "Canonical URL to prevent duplicate content"
    },
    "metaRobots": {
      "type": "string",
      "default": "index, follow",
      "description": "Robots meta tag (index, follow, noindex, nofollow)"
    },
    "structuredData": {
      "type": "json",
      "required": false,
      "description": "JSON-LD structured data for rich snippets"
    }
  },
  "notes": [
    "Reusable across all page types",
    "metaTitle: Keep under 60 chars for Google display",
    "metaDescription: Keep under 160 chars",
    "metaImage: Should be 1200x630px for social media",
    "Use structured data for Organization, LocalBusiness, FAQ schemas"
  ]
}
