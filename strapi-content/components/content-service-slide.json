{
  "contentType": "component",
  "componentCategory": "content",
  "displayName": "Service Slide",
  "description": "Carousel slide with service image, icon, title and description",
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "description": "Service image (800x600px minimum)"
    },
    "icon": {
      "type": "enumeration",
      "enum": ["document", "building", "license", "consulting", "accounting"],
      "required": true,
      "description": "Service icon type"
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 150,
      "description": "Service title"
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 300,
      "description": "Service description"
    }
  },
  "notes": [
    "Used in Services Carousel Section",
    "Each slide displays one service",
    "Icon size: 72x72px",
    "Supports keyboard navigation",
    "Navigation dots at bottom",
    "Images should be optimized and same aspect ratio"
  ]
}
