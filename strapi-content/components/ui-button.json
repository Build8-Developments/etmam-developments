{
  "contentType": "component",
  "componentCategory": "ui",
  "displayName": "Button",
  "description": "Reusable button component with label and link",
  "attributes": {
    "label": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Button text label"
    },
    "href": {
      "type": "string",
      "required": true,
      "description": "Button destination URL or path"
    },
    "variant": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "outline", "ghost"],
      "default": "primary",
      "description": "Button style variant"
    },
    "icon": {
      "type": "string",
      "required": false,
      "description": "Optional icon name (e.g., 'arrow-right', 'check', 'external-link')"
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false,
      "description": "Whether to open link in new tab"
    }
  },
  "notes": [
    "Used throughout the site for CTAs",
    "Supports RTL layout (icon position flips)",
    "Primary: green background, white text",
    "Secondary: white background, green text",
    "Common icons: arrow, chevron, external-link"
  ]
}
