{
  "contentType": "component",
  "componentCategory": "content",
  "displayName": "Service Card",
  "description": "Service card with icon, title, description and active state",
  "attributes": {
    "icon": {
      "type": "enumeration",
      "enum": [
        "building",
        "license",
        "consulting",
        "accounting",
        "hr",
        "marketing",
        "document"
      ],
      "required": true,
      "description": "Service icon type"
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 150,
      "description": "Service title"
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 300,
      "description": "Service description"
    },
    "isActive": {
      "type": "boolean",
      "default": false,
      "description": "Whether this service is highlighted/active"
    },
    "serviceLink": {
      "type": "string",
      "required": false,
      "description": "Link to detailed service page"
    }
  },
  "notes": [
    "Used in Services Section",
    "Active state: green background, white text",
    "Inactive state: white background, gray text",
    "Hover effect: scale up slightly",
    "Icons are SVG paths rendered inline",
    "Common services: Company Formation, Licensing, HR, Accounting"
  ]
}
