{
  "contentType": "component",
  "componentCategory": "sections",
  "displayName": "About Section",
  "description": "About us section with images, statistics and feature cards",
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Section title (e.g., 'من نحن' or 'About Us')"
    },
    "heading": {
      "type": "text",
      "required": true,
      "maxLength": 300,
      "description": "Main heading (e.g., 'رحلتك في تأسيس وإدارة الأعمال تبدأ من هنا')"
    },
    "description": {
      "type": "richtext",
      "required": true,
      "description": "Detailed description of the company/services"
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "description": "Primary large image (421x423px recommended)"
    },
    "secondaryImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "description": "Secondary overlay image (smaller, positioned over main)"
    },
    "statNumber": {
      "type": "string",
      "required": true,
      "maxLength": 10,
      "description": "Statistical number to display (e.g., '680')"
    },
    "statLabel": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Label for the statistic (e.g., 'شراكة ناجحة')"
    },
    "features": {
      "type": "component",
      "component": "ui.icon-text-card",
      "repeatable": true,
      "required": true,
      "min": 2,
      "max": 4,
      "description": "Feature cards with icons (e.g., Trust, Mission)"
    },
    "ctaButton": {
      "type": "component",
      "component": "ui.button",
      "required": true,
      "description": "Call-to-action button (e.g., 'عرض المزيد')"
    }
  },
  "notes": [
    "This is a component used in the home page layout",
    "Main image should be high quality, minimum 800x800px",
    "Features array typically contains 2-4 items",
    "Icons for features should be SVG format or icon name references"
  ]
}
