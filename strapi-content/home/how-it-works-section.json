    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "description": "Description explaining the process"
    },
    "personImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "description": "Image of person with laptop (507x507px)"
