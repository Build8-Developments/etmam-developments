    "bannerText": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Banner overlay text (e.g., 'إجراءات أبسط... إنجاز أسرع')"
    },
    "steps": {
      "type": "component",
      "component": "content.numbered-step",
      "repeatable": true,
      "required": true,
      "min": 3,
      "max": 5,
      "description": "Numbered process steps (typically 3)"
    }
  },
  "notes": [
    "Steps are numbered automatically (1, 2, 3)",
    "Each step has a number circle with connecting line",
    "Person image is displayed in a green frame",
