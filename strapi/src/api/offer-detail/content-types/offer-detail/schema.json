{
  "kind": "collectionType",
  "collectionName": "offer_details",
  "info": {
    "singularName": "offer-detail",
    "pluralName": "offer-details",
    "displayName": "Offer Detail",
    "description": "Individual offer details pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "subtitle": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richText",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "image": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "discount": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "originalPrice": {
      "type": "decimal"
    },
    "discountedPrice": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "SAR"
    },
    "features": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "content.offer-feature",
      "repeatable": true
    },
    "benefits": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "content.offer-benefit",
      "repeatable": true
    },
    "validUntil": {
      "type": "date"
    },
    "termsAndConditions": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "callToAction": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "ui.button",
      "repeatable": false
    },
    "seo": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "shared.seo",
      "repeatable": false
    }
  }
}

