{
  "kind": "collectionType",
  "collectionName": "legal_sub_services",
  "info": {
    "singularName": "legal-sub-service",
    "pluralName": "legal-sub-services",
    "displayName": "Legal Sub-Service",
    "description": "Individual legal services under each category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "icon": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "shortDescription": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "maxLength": 200
    },
    "startFromPrice": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "SAR"
    },
    "finishPeriodMin": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "finishPeriodMax": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "order": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "legal_service_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::legal-service-category.legal-service-category",
      "inversedBy": "legal_sub_services"
    },
    "button_label": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "services.single-service-description",
      "repeatable": true
    },
    "requirements": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "services.single-service-requirement",
      "repeatable": true
    },
    "steps": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "services.single-service-step",
      "repeatable": true
    }
  }
}
