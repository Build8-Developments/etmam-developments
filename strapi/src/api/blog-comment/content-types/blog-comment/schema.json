{
  "kind": "collectionType",
  "collectionName": "blog_comments",
  "info": {
    "singularName": "blog-comment",
    "pluralName": "blog-comments",
    "displayName": "blog-comment",
    "description": "Comments on blog posts"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "comment": {
      "type": "text",
      "required": true
    },
    "blog_post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog.blog",
      "inversedBy": "blog_comments"
    },
    "approved": {
      "type": "boolean",
      "default": false
    },
    "ipAddress": {
      "type": "string",
      "private": true
    },
    "userAgent": {
      "type": "string",
      "private": true
    },
    "isSpam": {
      "type": "boolean",
      "default": false
    }
  }
}
